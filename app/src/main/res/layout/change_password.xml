<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/slabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="142dp"
            android:layout_marginRight="40dp"
            android:text="Change Password"
            android:layout_alignParentTop="true"
            android:textAlignment="center" />
        <EditText

            android:id="@+id/cur_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:hint="Current Password"
            android:ems="10"
            android:layout_below="@id/slabel"
            android:textAlignment="center"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="false"
            android:inputType="textPassword" />

        <EditText

            android:id="@+id/new_pwd"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:ems="10"
            android:layout_below="@id/cur_pwd"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/confirm_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Retype New Password"
            android:ems="10"
            android:layout_below="@id/new_pwd"
            android:inputType="textPassword" />

        <Button
            android:textSize="20sp"
            android:id="@+id/button_change_password"
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="19dp"
            android:layout_marginRight="20dp"
            android:text="Change Password"
            android:layout_below="@id/confirm_new_pwd" />




        <TextView
            android:textSize="20sp"
            android:id="@+id/link_back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:text="Back"
            android:layout_below="@id/button_change_password"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="onClick" />
    </RelativeLayout>
</ScrollView>