<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="kmit.mentoring.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@id/textView5"
        android:layout_width="117dp"
        android:layout_height="0dp"
        android:text="TextView" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>


    <Button
        android:id="@+id/UpdateToServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize"
        android:text="Click to Update to Server" />

    <ListView
        android:id="@+id/std_list2"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="30dp"
        />

    <include
        android:id="@+id/view_change_password"
        android:visibility="invisible"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        layout="@layout/change_password" />

    <TableRow

        android:id="@+id/indicatorRow"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_gravity="bottom"
        >

        <ImageView
            android:id="@+id/item_student_flagged"
            android:paddingRight="5sp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flag_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />


        <TextView
            android:textSize="@dimen/list_view_size"
            android:id="@+id/name"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Flagged"
            android:layout_weight="1.0" />


        <ImageView
            android:id="@+id/item_student_rated"
            android:paddingRight="5sp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:textSize="@dimen/list_view_size"
            android:id="@+id/rated"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rated"
            android:layout_weight="1.0" />


        <ImageView
            android:id="@+id/item_student_not_rated"
            android:paddingRight="5sp"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_border_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />


        <TextView
            android:textSize="@dimen/list_view_size"
            android:id="@+id/not_rated"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="not rated"
            android:layout_weight="1.0" />

    </TableRow>

</android.support.design.widget.CoordinatorLayout>

